#!/bin/bash

set -e

RED='\e[1;31m'

if [[ "$EUID" -ne "0" ]]; then
        echo -e $RED "Run this script as root or with the sudo command."
        exit 1
fi

systemctl disable --now nfs-client.target || true
systemctl disable --now nfs-kernel-server || true
systemctl disable --now nfs-blkmap || true
systemctl disable --now nfs-server || true
systemctl disable --now portmap || true
systemctl disable --now rpcbind || true
systemctl disable --now rpcbind.socket || true
