#!/bin/bash

set -e

RED='\e[1;31m'

if [[ "$EUID" -ne "0" ]]; then
        echo -e $RED "Run this script as root or with sudo command."
        exit 1
fi

systemctl enable --now nfs-client.target || true
systemctl enable --now nfs-kernel-server || true
systemctl enable --now nfs-blkmap || true
systemctl enable --now nfs-server || true
systemctl enable --now portmap || true
systemctl enable --now rpcbind || true
systemctl enable --now rpcbind.socket || true
